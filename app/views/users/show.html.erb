<% provide(:title, "#{@user.username} Profile info") %>
<h1><%=@user.username %> info</h1>
<hr>
<div class="row">
  <div class="col-md-4">
    <%= image_tag  "user.png", class:"img-fluid" %>
    <a href="#" class="btn btn-info w-100 my-2"><i class="far fa-plus-square"></i> Follow</a>
    <a href="#" class="btn btn-warning w-100 my-1"><i class="fas fa-user-plus text-white"></i> Friend</a>
    <div class="card">
      <div class="card-body">
        <p class="card-text"><strong>Fullname: </strong> <%= @user.fullname%></p>
        <p class="card-text"><strong>ID: </strong> <%= @user.id%></p>
        <p class="card-text"><strong>Email: </strong> <%= @user.email%></p>
      </div>
    </div>
  </div>
  <div class="col-md-8"></div>
</div>

